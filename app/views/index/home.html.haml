    datasets : [
      {
        fillColor : "#1145ff",
        strokeColor : "#000000",
        pointColor : "#fff",
        pointStrokeColor : "#000000",
        data : asked
      },
      {
        fillColor : "rgba(151,187,205,0.5)",
        strokeColor : "rgba(151,187,205,0.8)",
        pointColor : "#fff",
        pointStrokeColor : "#000000",
        data : unanswered
      }
    ]
  }

  build(data);

